{
  "name": "next-js-react-typescript-starter",
  "version": "1.0.0",
  "description": "An example notes app built with Typescript, Next.JS & React",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "lint": "npx tslint -c tslint.json './{pages,src}/**/*.ts{,x}' --project .",
    "lint:fix": "npm run lint -- --fix",
    "lint:css": "npx stylelint './{pages,src}/**/*.ts{,x}'",
    "format": "npm run lint:fix && npx prettier --write './**/*.{t,j}s{,x}'",
    "types": "npx tsc --noEmit",
    "storybook": "start-storybook -p 6006 -c .storybook",
    "tslint-check": "npx tslint-config-prettier-check ./tslint.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": [
      "npx prettier --write",
      "git add"
    ],
    "./{pages,components}/*.{t,j}s{,x}": [
      "npx tslint -c tslint.json",
      "npx stylelint",
      "npx prettier --write",
      "npm run test",
      "git add"
    ]
  },
  "keywords": [
    "Typescript",
    "Next.js",
    "React",
    "Redux",
    "SSR",
    "Notes"
  ],
  "author": "Vance Longwill <vancelongwill@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@zeit/next-css": "^0.2.1-canary.4",
    "@zeit/next-typescript": "^1.1.1",
    "antd": "^3.16.2",
    "next": "^8.0.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@storybook/react": "^5.0.6",
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.11",
    "@types/next": "^8.0.3",
    "@types/node": "^11.13.4",
    "@types/prop-types": "^15.7.0",
    "@types/react": "^16.8.11",
    "@types/react-dom": "^16.8.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.14",
    "@types/tapable": "^1.0.4",
    "@types/webpack": "^4.4.27",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-import": "^1.11.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^7.0.2",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "enzyme-to-json": "^3.3.5",
    "fork-ts-checker-webpack-plugin": "^1.0.2",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.6.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.3"
  }
}
